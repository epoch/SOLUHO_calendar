
<div class='event_details'>
  <h1><%= @current_user.username %>'s Event Details</h1>
  <p><%= image_tag(@event.image) %>  Title : <strong><%= @event.name %></strong> | Date : <%= link_to(@event.date, events_path(date: @event.date, :region => @region)) %></p>

  <div class='show_options'>
    <p><%= link_to('Edit', edit_event_path)%></p>
    <p><%= link_to('Delete', events_lists_path, :data => { :confirm => 'Are you sure you want to delete this?', :method => :delete })%></p>
    <p><%= link_to('Create Another Event', new_event_path) %></p>
    <p><%= link_to('Your Events list', events_lists_path) %></p>
  </div>
</div>


